{
	"name": "dingo-d/php-mjml-renderer",
	"type": "library",
	"description": "PHP renderer for MJML language",
	"keywords": [
		"mjml",
		"renderer",
		"email"
	],
	"homepage": "https://github.com/dingo-d/php-mjml-renderer",
	"license": "MIT",
	"authors": [
		{
			"name": "Denis Å½oljom",
			"homepage": "https://madebydenis.com",
			"email": "denis.zoljom@gmail.com"
		},
		{
			"name": "Contributors",
			"homepage": "https://github.com/dingo-d/php-mjml-renderer/graphs/contributors"
		}
	],
	"require": {
		"php": ">=8.3",
		"ext-simplexml": "*"
	},
	"require-dev": {
		"captainhook/captainhook": "^5",
		"pestphp/pest": "^4.1",
		"php-parallel-lint/php-parallel-lint": "^1.3",
		"phpcompatibility/php-compatibility": "^9.3",
		"phpcsstandards/php_codesniffer": "^3.13",
		"phpstan/phpstan": "^2.1"
	},
	"autoload": {
		"psr-4": {
			"MadeByDenis\\PhpMjmlRenderer\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"MadeByDenis\\PhpMjmlRenderer\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"post-autoload-dump": "vendor/bin/captainhook install -f -s",
		"test:types": "@php ./vendor/bin/phpstan",
		"test:style": "@php ./vendor/bin/phpcs",
		"test:unit": "@php ./vendor/bin/pest --no-coverage",
		"test:coverage": "@php -dxdebug.mode=coverage ./vendor/bin/pest",
		"test": [
			"@test:style",
			"@test:types",
			"@test:unit"
		]
	},
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
